@model IEnumerable<Movies.Models.Movie>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold">🎬 Movies List</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No movies available at the moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var movie in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm border-0 h-100">
                        <img src="~/MovieImages/@movie.MainImg"
                             alt="@movie.Name"
                             class="card-img-top"
                             style="height: 300px; object-fit: cover;" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-truncate">@movie.Name</h5>
                            <p class="card-text text-muted mb-2">
                                <small>@movie.Category?.Name</small>
                            </p>
                        

                            <p class="card-text mt-auto">
                                <small class="text-secondary">
                                    Release: @movie.Date.ToString("dd MMM yyyy")
                                </small>
                            </p>

                            <div class="mt-3 text-center">
                                <a 
                                   asp-action="Detail"
                                   asp-route-id="@movie.Mov_Id"
                                   class="btn btn-primary px-4">
                                    <i class="bi bi-info-circle me-1"></i> Details
                                </a>
                            </div>


                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
