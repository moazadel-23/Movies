@model Movies.ViewModel.ValidateOTPVM

@{
    ViewData["Title"] = "Validate OTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #e5e7eb; /* رمادي فاتح */
        color: #1e1e1e;
        font-family: "Segoe UI", sans-serif;
    }

    .otp-box-wrapper {
        max-width: 420px;
        margin: 60px auto;
        padding: 20px;
    }

    .otp-box {
        background: #f9fafb;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.15);
        padding: 30px 28px;
        border: 1px solid #d1d5db;
        transition: 0.3s;
    }

    .otp-box:hover {
        box-shadow: 0 0 18px rgba(212, 175, 55, 0.2);
    }

    .otp-box h2 {
        margin-bottom: 22px;
        font-size: 24px;
        text-align: center;
        color: #b8860b;
        letter-spacing: 1px;
    }

    .form-group {
        margin-bottom: 14px;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        background: #ffffff;
        color: #111827;
        font-size: 14px;
        box-sizing: border-box;
        transition: 0.3s;
    }

    .form-control::placeholder {
        color: #888;
    }

    .form-control:focus {
        outline: none;
        border-color: #b8860b;
        box-shadow: 0 0 5px rgba(212, 175, 55, 0.3);
    }

    .btn-submit {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: none;
        background: linear-gradient(90deg, #ffd700, #f0c419);
        color: #1e1e1e;
        font-weight: 700;
        font-size: 15px;
        cursor: pointer;
        transition: 0.3s;
    }

    .btn-submit:hover {
        background: linear-gradient(90deg, #ffea85, #ffd700);
        transform: scale(1.02);
    }

    .text-small {
        text-align: center;
        margin-top: 15px;
        font-size: 13px;
        color: #555;
    }

    .text-small a {
        color: #b8860b;
        text-decoration: none;
        font-weight: 600;
    }

    .text-small a:hover {
        text-decoration: underline;
    }

    .text-danger {
        font-size: 12px;
        color: #dc2626;
    }
</style>

<div class="otp-box-wrapper">
    <div class="otp-box">
        <h2>Validate One-Time Password</h2>

        <form asp-action="ValidateOTP" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="OTP" class="form-control" placeholder="Enter OTP Code" />
                <span asp-validation-for="OTP" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ApplicationUserId" class="form-control" placeholder="User ID" readonly />
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">Verify OTP</button>

            <div class="text-small">
                <a asp-action="Login">Back to Login</a>
            </div>
            <div class="text-small">
                <a asp-action="Index">Back to Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
