@using Movies.Utilities
@model IEnumerable<Movies.Models.Category>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-3">Categories</h2>

<p>
    <a href="/Admin/Category/Create" class="btn btn-success">Create New Category</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Cat_Id</th>
            <th>Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cat_Id</td>
                <td>@item.Name</td>
                <td>@item.Status</td>
                <td class="d-flex gap-2">
                    @if (User.IsInRole(SD.SUPER_ADMIN_ROLE) || User.IsInRole(SD.ADMIN_ROLE))
                    {
                        <a href="/Admin/Category/Edit/@item.Cat_Id" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/Admin/Category/Delete/@item.Cat_Id" method="post" style="display:inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    }
                    else
                    {
                        <td>No Action</td>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
