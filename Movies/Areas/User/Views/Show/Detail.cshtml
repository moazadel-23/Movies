@model Movies.Models.Movie

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="~/MovieImages/@Model.MainImg"
                     alt="@Model.Name"
                     class="img-fluid rounded-start"
                     style="object-fit: cover; height: 100%; width: 100%;" />
            </div>

            <div class="col-md-7">
                <div class="card-body p-4">
                    <h2 class="fw-bold">@Model.Name</h2>
                    <p class="text-muted">@Model.Description</p>

                    <hr />

                    <p><strong>Category:</strong> @Model.Category?.Name</p>

                    <p><strong>Release Date:</strong> @Model.Date.ToString("dd MMM yyyy")</p>

                    <hr />

                    <h5 class="mt-3 mb-3">🎭 Actors:</h5>
                    <div class="d-flex flex-wrap gap-3">
                        @if (Model.MovieActors != null && Model.MovieActors.Any())
                        {
                            foreach (var ma in Model.MovieActors)
                            {
                                <div class="text-center">
                                    <img src="~/ActorsImg/@ma.Actor?.Img"
                                         alt="@ma.Actor?.Img"
                                         class="rounded-circle border shadow-sm"
                                         style="width:90px; height:90px; object-fit:cover;" />

                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No actors available for this movie.</p>
                        }
                    </div>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back to Movies
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
