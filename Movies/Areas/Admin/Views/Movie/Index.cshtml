@model IEnumerable<Movies.Models.Movie>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Movies</h2>

<p>
    <a class="btn btn-primary" href="/Admin/Movie/Create">Create New Movie</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Main Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Date</th>
            <th>Cinema</th>
            <th>Category</th>
            <th>Actors</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <!-- Main Image -->
                <td>
                    @if (!string.IsNullOrEmpty(movie.MainImg))
                    {
                        <img src="@Url.Content("~/MovieImages/" + movie.MainImg)" width="80" style="object-fit: cover;" />
                    }
                </td>

                <!-- Movie Details -->
                <td>@movie.Name</td>
                <td>@movie.Price.ToString("C")</td>
                <td>@movie.Date.ToString("g")</td>

                <!-- Cinema & Category -->
                <td>@movie.Cinema?.Img</td>
                <td>@movie.Category?.Name</td>

                <!-- Actors -->
                <td>
                    @if (movie.MovieActors != null && movie.MovieActors.Any())
                    {
                        @string.Join(", ", movie.MovieActors.Select(ma => ma.Actor?.Img))
                    }
                </td>

                <!-- Actions -->
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@movie.Mov_Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@movie.Mov_Id"
                       onclick="return confirm('Are you sure you want to delete this movie?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
