@model Movies.Models.Movie

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .movie-container {
        max-width: 1050px;
    }

    .ticket-input {
        width: 110px;
    }

    .add-cart-btn, .back-btn {
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 10px;
    }

        .add-cart-btn i {
            font-size: 1.2rem;
        }

    .movie-image {
        object-fit: cover;
        height: 100%;
        width: 100%;
        border-radius: 15px 0 0 15px;
    }
</style>


<div class="container movie-container mt-5">

    <!-- Movie Card -->
    <div class="card shadow-lg border-0 rounded-4">

        <div class="row g-0">

            <!-- Movie Image -->
            <div class="col-md-5">
                <img src="~/MovieImages/@Model.MainImg"
                     alt="@Model.Name"
                     class="movie-image" />
            </div>

            <!-- Movie Info -->
            <div class="col-md-7">
                <div class="card-body p-4">

                    <h2 class="fw-bold mb-3">@Model.Name</h2>

                    <p class="text-muted fs-6">@Model.Description</p>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-md-6 mb-2">
                            <strong>Category:</strong> @Model.Category?.Name
                        </div>
                        <div class="col-md-6 mb-2">
                            <strong>Release Date:</strong> @Model.Date.ToString("dd MMM yyyy")
                        </div>
                        <div class="col-md-6 mb-2">
                            <strong>Price:</strong> @Model.Price.ToString("C")
                        </div>
                    </div>

                    <hr />

                    <!-- Action Buttons -->
                    <div class="d-flex align-items-center">

                        <!-- Back Button -->
                        <a asp-action="Index" class="btn btn-secondary back-btn me-3">
                            <i class="bi bi-arrow-left-circle me-1"></i>
                            Back to Movies
                        </a>

                        <!-- Add To Cart -->
                        <form asp-action="AddToCart" asp-controller="Cart" method="post" class="d-flex align-items-center">
                            <input type="hidden" name="movieId" value="@Model.Mov_Id" />

                            <!-- Quantity Input -->
                            <input type="number" name="TicketCount" min="1" value="1"
                                   class="form-control ticket-input me-3"
                                   required />

                            <button type="submit" class="btn btn-primary add-cart-btn">
                                <i class="bi bi-cart-fill me-2"></i>
                                Add to Cart
                            </button>
                        </form>

                    </div>

                </div>
            </div>
        </div>

    </div>

</div>
