@model Movies.ViewModel.RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f7f7f7;
        color: #222;
        font-family: "Segoe UI", sans-serif;
    }

    .register-box-wrapper {
        max-width: 420px;
        margin: 60px auto;
        padding: 20px;
    }

    .register-box {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        padding: 30px 28px;
        border: 1px solid #e0e0e0;
        transition: 0.3s;
    }

        .register-box:hover {
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        }

        .register-box h2 {
            margin-bottom: 22px;
            font-size: 24px;
            text-align: center;
            color: #d4af37;
            letter-spacing: 0.5px;
        }

    .form-group {
        margin-bottom: 14px;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background: #fdfdfd;
        color: #333;
        font-size: 14px;
        box-sizing: border-box;
        transition: 0.3s;
    }

        .form-control::placeholder {
            color: #888;
        }

        .form-control:focus {
            outline: none;
            border-color: #d4af37;
            box-shadow: 0 0 6px rgba(212, 175, 55, 0.3);
        }

    .btn-submit {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: none;
        background: linear-gradient(90deg, #facc15, #d4af37);
        color: #000;
        font-weight: 700;
        font-size: 15px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-submit:hover {
            background: linear-gradient(90deg, #ffe45c, #facc15);
            transform: scale(1.02);
        }

    .text-small {
        text-align: center;
        margin-top: 15px;
        font-size: 13px;
        color: #555;
    }

        .text-small a {
            color: #d4af37;
            text-decoration: none;
            font-weight: 600;
        }

            .text-small a:hover {
                text-decoration: underline;
            }

    .text-danger {
        font-size: 12px;
        color: #e63946;
    }
</style>

<div class="register-box-wrapper">
    <div class="register-box">
        <h2>Create Account</h2>

        <form asp-area="Identity" asp-controller="Account" asp-action="Register" method="post">
            @Html.AntiForgeryToken()


            <div class="form-group">
                <input asp-for="FirstName" class="form-control" placeholder="FirstName" Name="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="LastName" class="form-control" placeholder="LastName" Name="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="UserName" class="form-control" placeholder="UserName" Name="UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" name="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" Name="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="ConfirmPassword" Name="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-submit">Register</button>

            <div class="text-small">
                Already have an account? <a href="/Identity/Account/Login">Sign in</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}