@model Movies.Models.Movie
@using Movies.Utilities

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Movie</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Mov_Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Categories ?? new List<Movies.Models.Category>(), "Id", "Name", Model.CategoryId))">
            <option value="">Select Category</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CinemaId">Cinema</label>
        <select asp-for="CinemaId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Directors ?? new List<Movies.Models.Cinema>(), "Id", "Name", Model.CinemaId))">
            <option value="">Select Cinema</option>
        </select>
    </div>

    <div class="form-group">
        <label>Actors</label>
        <select asp-for="MovieActors" class="form-control" multiple="multiple"
                asp-items="@(new MultiSelectList(ViewBag.Actors ?? new List<Movies.Models.Actor>(), "Act_Id", "Name", ViewBag.SelectedActors))">
        </select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
